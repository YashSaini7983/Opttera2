<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@color/white">



    <androidx.cardview.widget.CardView
        android:id="@+id/carRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        android:background="@drawable/custom_edit_box">


    <androidx.cardview.widget.CardView
        android:id="@+id/carRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"

        app:cardElevation="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:padding="20dp">
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/imgCar"
                android:layout_width="99dp"
                android:layout_height="60dp"
                android:layout_height="54dp"

                android:src="@drawable/bmw"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.49" />

            <LinearLayout

                android:id="@+id/carInformation"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgCar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="25dp">

                <TextView
                    android:id="@+id/txtCarName"
                    app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="BMW"
                    android:textAppearance="@style/Vechile"
                    android:lineHeight="21.78dp"/>


                <TextView

                    android:id="@+id/txtCarDetail"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="i3s 94 Ah (2017 - 2018)"
                    android:lineHeight="15dp"
                    android:textAppearance="@style/Vechile1"

                    android:padding="5dp"/>

                    android:padding="15dp"/>







            </LinearLayout>




            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintStart_toEndOf="@id/carInformation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/baseline_arrow_forward_ios_24"/>






        </androidx.constraintlayout.widget.ConstraintLayout>
        
        
        
        
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>