                android:textAppearance="@style/carDetail1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type 2, CCS 2"
                android:layout_weight="1"
                android:gravity="end"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1" />

        </LinearLayout>

















