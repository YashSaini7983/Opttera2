            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acceleration 0-100km/h"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:lineHeight="20dp"
            android:textAppearance="@style/carDetail1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 sec"
                android:layout_weight="1"
                android:gravity="end"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Speed"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:lineHeight="17dp"
                android:textAppearance="@style/carDetail1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="155km/h"
                android:layout_weight="1"
                android:gravity="end"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Power"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:lineHeight="17dp"
                android:textAppearance="@style/carDetail1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="114 kW"
                android:layout_weight="1"
                android:gravity="end"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Torque"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:lineHeight="17dp"
                android:textAppearance="@style/carDetail1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="235 Nm"
                android:layout_weight="1"
                android:gravity="end"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drive"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:lineHeight="17dp"
                android:textAppearance="@style/carDetail1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front"
                android:layout_weight="1"
                android:gravity="end"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="35dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Range"
            android:textAppearance="@style/carDetail"
            android:lineHeight="20dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opttera calculates its own real range values based on actual driving data."
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:lineHeight="20dp"
                android:textAppearance="@style/carDetail1"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Situations"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mild 23°"
                android:textAppearance="@style/fonts2"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cold 10°"
                android:layout_weight="1"
                android:gravity="end"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts2" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="345 km"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="225 km"
                android:layout_weight="1"
                android:gravity="end"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Highway"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="345 km"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="225 km"
                android:layout_weight="1"
                android:gravity="end"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Combined"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="345 km"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="225 km"
                android:layout_weight="1"
                android:gravity="end"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="35dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General"
                android:textAppearance="@style/carDetail"
                android:lineHeight="20dp"
                android:paddingLeft="20dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CT Real Range"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:lineHeight="20dp"
                android:textAppearance="@style/carDetail1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="204 - 238 km"
                android:layout_weight="1"
                android:gravity="end"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WLTP Range"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:lineHeight="20dp"
                android:textAppearance="@style/carDetail1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="255 km"
                android:layout_weight="1"
                android:gravity="end"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usable Battery"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:lineHeight="20dp"
                android:textAppearance="@style/carDetail1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="37.8 kWh"
                android:layout_weight="1"
                android:gravity="end"
                android:lineHeight="17dp"
                android:textAppearance="@style/fonts1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Efficiency"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:lineHeight="20dp"
                android:textAppearance="@style/carDetail1"/>

            <TextView
                android:layout_width="wrap_content"
